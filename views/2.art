        <script>
      function myFunction(x){
    if(x.className == "far fa-thumbs-up"){
        x.className = "fas fa-thumbs-up";
    }else{
        x.className = "far fa-thumbs-up";
     }
}
function expandTextarea(id) {
    document.getElementById(id).addEventListener('keyup', function() {
        this.style.overflow = 'hidden';
        this.style.height = 0;
        this.style.height = this.scrollHeight + 'px';
    }, false);
}

expandTextarea('txtarea');

function pressLike(){
    let like = document.getElementById("like");
    if(like.className == "btn btn-outline-primary"){
        like.className = "btn btn-primary";
        const sign = document.getElementById("likeSign");
        sign.style.transform = "translateY(-5px)";
        setTimeout(function (){
            sign.style.transform = "translateY(0px)";
        }, 400);
        if (typeof(Storage) !== "undefined") {
            localStorage.setItem("like2", "true");
        }
        const Http = new XMLHttpRequest();
        const url = "/document/2?val=1&d=1";
        Http.open("GET", url);
        Http.send();
        document.getElementById("likeNum").innerText = parseInt(document.getElementById("likeNum").innerText) + 1 + "";
    }else{
        like.className = "btn btn-outline-primary";
        if (typeof(Storage) !== "undefined") {
            localStorage.setItem("like2", "false");
        }
        const Http = new XMLHttpRequest();
        const url = "/document/2?val=-1&d=1";
        Http.open("GET", url);
        Http.send();
        document.getElementById("likeNum").innerText = parseInt(document.getElementById("likeNum").innerText) - 1 + "";
    }
}
function load(){
    if(localStorage.getItem("like2") == "true"){
        like.className = "btn btn-primary";
    }
}
